#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :purpose
          .field-input
            = f.select :purpose, [["ビジネス(メンズ)", 1], ["ビジネス(レディース)", 2], ["プライベート(メンズ)", 3], ["プライベート(レディース)", 4], ["オフィスカジュアル(メンズ)", 5], ["オフィスカジュアル(レディース)", 6]], { prompt: "職業を選択してください" }, { id: "js", class: "js-texr"} 
        .actions
          = f.submit "Update", class: 'btn'
