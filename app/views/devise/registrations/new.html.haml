#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Create Account
      %h5 新規アカウントの作成
      = render "devise/shared/links"
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :name
            %em (6 characters maximum)
            %br/
          .field-input
            = f.text_field :name, autofocus: true, maxlength: "6"
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :password
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :password_confirmation
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        .field
          .field-label
            = f.label :purpose
          .field-input
            = f.select :purpose, [["ビジネス(メンズ)", 1], ["ビジネス(レディース)", 2], ["プライベート(メンズ)", 3], ["プライベート(レディース)", 4], ["オフィスカジュアル(メンズ)", 5], ["オフィスカジュアル(レディース)", 6]], {prompt: "職業を選択してください" }, { id: "js", class: "js-texr"} 
        .actions
          = f.submit "Create Account", class: 'btn'


