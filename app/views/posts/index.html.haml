%body
  %header.header
    .header__bar.row
      %h1.grid-6
        %a{:href => "/"} WearherCloth
      - if user_signed_in?
        .user_nav.grid-6
          %span
            = current_user.name
            %ul.user__info
              %li
                = link_to "ログアウト", destroy_user_session_path, method: :delete
                = link_to "マイページ", "/users/#{current_user.id}"
          = link_to  "投稿する", "/posts/new", class: "post"
      - else
        .grid-6
          = link_to "ログイン", new_user_session_path, class: 'post'
          = link_to "新規登録", new_user_registration_path, class: 'post'

= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form|
  = form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input"
  = form.submit "検索", class: "search-btn"

.contents.row
  - @posts.each do |post|
    .content_post{:style => "background-image: url(#{post.image});", :width => "400px", :height => "400px"}
      .more
        %span= image_tag 'arrow_top.png'
        %ul.more_list
          %li
            = link_to '詳細', "/posts/#{post.id}", method: :get 
          %li
            = link_to '編集', "/posts/#{post.id}/edit", method: :get
          %li
            = link_to '削除', "/posts/#{post.id}", method: :delete
      = simple_format(post.text)
      %span.name
        %a{:href => "/users/#{post.user.id}"}
          %span 投稿者
          = post.user.name

  = paginate(@posts)

